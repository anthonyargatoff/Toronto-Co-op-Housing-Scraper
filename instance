#! /usr/bin/bash

location="/home/anthony/furlong_co-op_scraping"

if [ $1 = "stop" ]
then
    pid=$(pgrep -f "python3 ./server.py")
    if [ -z "$pid" ]; then
    echo "Process not found."
    else
    echo "Process found with PID: $pid. Killing process."
    kill $pid
    fi
elif [ $1 = "start" ]
then
    cd "$location/"
    nohup ./server.py > output.txt 2>&1 &
    pid=$!
    echo "Starting on PID: $pid" 
elif [ $1 = 'fg' ]
then
    cd "$location/"
    ./server.py
else
    echo "Unrecognized option. Use 'start' or 'stop' or 'fg'."
fi
